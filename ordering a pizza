print("Welcome to Python Pizza Deliveries!")
size = input("What size pizza do you want? S, M, or L ")
add_pepperoni = input("Do you want pepperoni? Y or N ")
extra_cheese = input("Do you want extra cheese? Y or N ")
# ðŸš¨ Don't change the code above ðŸ‘†

#Write your code below this line ðŸ‘‡
bill=0
if size == "S":
   print('the small size of pize is $15')
   bill=15
   if add_pepperoni == "y":
     print('pepperoni for small pize is $3')
     bill_1=bill+3
     if extra_cheese == "y":
       print('the extra cheese for any pizza is:$1')
     print("total prize of pizza :$",bill_1+1) 
elif size == "M":
  print('the medium size of pize is $20')
  if add_pepperoni == "y":
    print('Pepperoni for medium or large pize is: $5')
    bill=20
    bill_2=bill+5
    if extra_cheese == "y":
       print('the extra cheese for any pizza is:$1')
    print("total prize of pizza :$",bill_2+1)
elif size == "L":
  print('the Large size of pize is $25')
  if add_pepperoni == "y":
    print('Pepperoni for medium or large pize is: $5')
    bill=25
    bill_3=bill+5
    if extra_cheese == "y":
      print('the extra cheese for any pizza is:$1')
    print("total prize of pizza :$",bill_3+1)
else:
  print("we dont have what  to u need")
 




